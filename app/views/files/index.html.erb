<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">üìÅ My Uploaded Files</h2>
    <%= link_to "Upload New File", new_file_path, class: "btn btn-success btn-lg" %>
  </div>

  <% if @files.any? %>
    <div class="table-responsive">
      <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>File</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @files.each do |file| %>
            <tr>
              <td><strong><%= file.title %></strong></td>
              <td><%= file.description.presence || "No description available" %></td>
              <td>
                <%= link_to "‚¨á Download", rails_blob_path(file.file, disposition: "attachment"), class: "btn btn-info btn-sm" %>
              </td>
              <td>
                <div class="d-flex gap-2">
                  <%= link_to "üîó Share", share_file_path(file), class: "btn btn-warning btn-sm" %>
                  <%= link_to "‚ùå Delete", file_path(file), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-warning text-center" role="alert">
      No files uploaded yet. <%= link_to "Upload Now!", new_file_path, class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>
</div>
