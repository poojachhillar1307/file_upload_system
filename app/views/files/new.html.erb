<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="width: 400px; border-radius: 12px;">
    <h2 class="text-center mb-4 text-primary">ðŸ“¤ Upload New File</h2>

    <%= form_with model: @file, url: files_path, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter file title", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control", placeholder: "Enter file description", rows: 3 %>
      </div>

      <div class="mb-3">
        <%= form.label :file, class: "form-label" %>
        <%= form.file_field :file, class: "form-control", required: true %>
      </div>

      <div class="d-grid">
        <%= form.submit "ðŸ“‚ Upload File", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "â¬… Back to Files", files_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
